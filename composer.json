{
    "name": "reclaimergold/acf-service-management-suite",
    "description": "Complete service business management for WordPress - locations, service areas, and team members",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Ryan T. M. Reiffenberger",
            "email": "ryan@fallstechgroup.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^1.0",
        "mockery/mockery": "^1.5",
        "brain/monkey": "^2.6",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite unit",
        "test:integration": "phpunit --testsuite integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf"
    },
    "autoload": {
        "classmap": [
            "includes/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "ACF_SMS\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
